{
    "manifest-version": 3,
    "name": "Bionic Reading Formatter",
    "version": "1.0",
    "description": "A browser extension that reformats text on web pages using Bionic Reading methodologies.",
    "permission": ["activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "popup.js"
    }, 
    "content_scripts": [
        {
            "matches": ["<all_urls"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}